<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Validation">  
	<select id="User_Check">
		SELECT
			 COUNT(*) AS user_check
		  FROM
			 UserList
		 WHERE 1=1
	<if test='pw != null'>
		   AND Email = #{Email}
	</if>
		   AND DelYn ='N'
  </select>
</mapper>