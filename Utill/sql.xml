<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="management">  
  <select id="login">
    SELECT
    	  COUNT(*) AS UserCheck
	  	 ,UserSn
      FROM
          UserList
	 WHERE
	      1=1
<if test='id != null'>
	<if test='pw != null'>
	   AND ID = #{id}
	   AND Password = #{pw}
	</if>
</if>
	   AND DelYn ='N'
  </select>
</mapper>